# -----------------------------------------------------------------------------
# üåê ShadowPanel Web Configuration
# -----------------------------------------------------------------------------
PORT=90                                 # Web panel port (default: 90)

# -----------------------------------------------------------------------------
# üîó Pterodactyl Panel Integration
# -----------------------------------------------------------------------------
PTERODACTYL_PANEL_URL=http://<panel-ip-or-domain> # Pterodactyl Panel URL

# -----------------------------------------------------------------------------
# üõ¢Ô∏è Database Configuration (must match your Pterodactyl DB settings)
# -----------------------------------------------------------------------------
MYSQL_STATUS=true                       # true = persist sessions between restarts
MYSQL_DB=shadowdb                       # Database name
MYSQL_IP=127.0.0.1                      # Database IP or domain
MYSQL_PORT=3306                         # MySQL port (default: 3306)
MYSQL_USER=shadow                      # Database username
MYSQL_PASS=changeme                    # Database password (change this!)
SESSION_TABLE=shadowpanel               # Session table name

# -----------------------------------------------------------------------------
# üîê Session Configuration
# -----------------------------------------------------------------------------
SESSION_SECRET=changeme                 # Session secret (use a strong random string)
SESSION_EXPIRATION_MS=86400000         # Session lifetime (ms) ‚Üí 24 hours
SESSION_CHECK_INTERVAL_MS=900000       # Cleanup interval (ms) ‚Üí 15 minutes
